<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="32dp"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- Header -->
        <TextView
            android:id="@+id/info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/artifika"
            android:text="Welcome!"
            android:textAlignment="center"
            android:textColor="@color/van_dyke"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/asul"
            android:text="Here you'll find helpful guidance on how to use the alcohol sensor, answers to frequently asked questions, tips for safer drinking, and resources to support you if you're thinking about quitting."
            android:textAlignment="center"
            android:textColor="@color/deep_red"
            android:textSize="16sp" />

        <!-- Section 1: Guide to use sensor -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/artifika"
                        android:text="How to Use the BAC Sensor\n"
                        android:textAlignment="center"
                        android:textColor="@color/van_dyke"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Step 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/asul"
                            android:text="Step 1: When first used after long period of storage (a month or more), the sensor must be fully warmed up for 24 hours to ensure maximum accuracy. "
                            android:textAlignment="center"
                            android:textColor="@color/deep_red"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/sensor_mq3"
                            android:contentDescription="MQ3 sensor and timer" />
                    </LinearLayout>

                    <!-- Step 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/asul"
                            android:text="Step 2: Open the DrinkWise app and navigate to the Dashboard. Press the 'MEASURE BAC' button when you're ready to take a reading."
                            android:textColor="@color/deep_red"
                            android:textAlignment="center"
                            android:textSize="16sp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="142dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="App dashboard screen"
                            android:scaleType="fitCenter"
                            android:src="@drawable/measure_dashboard" />
                    </LinearLayout>

                    <!-- Step 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/asul"
                            android:text="Step 3: Hold the circular part of the sensor 1 inch from your mouth while breathing."
                            android:textColor="@color/deep_red"
                            android:textAlignment="center"
                            android:textSize="16sp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/guy_using_sensor"
                            android:contentDescription="BAC reading screen" />
                    </LinearLayout>

                    <!-- Step 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/asul"
                            android:text="Step 4: Follow the on-screen instructions. Breathe steadily (don't blow) into the alcohol sensor until the progress bar reaches 100%. When done, the reading will appear in your dashboard."
                            android:textColor="@color/deep_red"
                            android:textAlignment="center"
                            android:textSize="16sp"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/bac_readings"
                            android:contentDescription="Person using breath sensor" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 2: FAQ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/artifika"
                        android:text="Frequently Asked Questions\n"
                        android:textAlignment="center"
                        android:textColor="@color/van_dyke"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!--First question -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/asul"
                        android:text="Q: What's a safe BAC level?\n"
                        android:textColor="@color/deep_red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asul"
                        android:text="A: There's no completely safe BAC level when it comes to activities like driving, swimming, or using tools. Even small amounts can affect decision-making or coordination in some people. The safest option is 0.00% when safety matters!\n\nIf you're using the app to track your BAC, aim to stay as low as possible, and always prioritize your well-being and the safety of others.\n"
                        android:textColor="@color/deep_red"
                        android:textSize="16sp" />

                    <!--Second question -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/asul"
                        android:text="Q: Can I use it right after drinking?\n"
                        android:textColor="@color/deep_red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asul"
                        android:text="A: Wait at least 15 minutes after your last drink for accurate readings.\n"
                        android:textColor="@color/deep_red"
                        android:textSize="16sp" />

                    <!--Third question -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/asul"
                        android:text="Q: What should I do if my BAC is high?\n"
                        android:textColor="@color/deep_red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asul"
                        android:text="A: If your BAC is high, the safest thing to do is stay where you are and avoid driving or making risky decisions. You can quickly get help by tapping the Quick Help button in the dashboard and alerting an emergency contact."
                        android:textColor="@color/deep_red"
                        android:textSize="16sp" />

                    <!--Fourth question -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/asul"
                        android:text="Q: How can I lower my BAC faster?\n"
                        android:textColor="@color/deep_red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/asul"
                        android:text="A: You can't. Only time lowers your BAC (about one standard drink per hour). If your BAC is high, stay where you are and use Quick Help to reach your emergency contact."
                        android:textColor="@color/deep_red"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 3: Safer Drinking Tips -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/artifika"
                        android:text="Tips for Safer Drinking\n"
                        android:textAlignment="center"
                        android:textColor="@color/van_dyke"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/asul"
                        android:text="• Pace yourself - try to have no more than one standard drink per hour.\n\n• Stay hydrated - alternate alcoholic drinks with water.\n\n• Eat before and while drinking to slow alcohol absorption.\n\n• Know your limits and stick to them.\n\n• Plan for safe transportation home before you start drinking."
                        android:textColor="@color/deep_red"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 4: Resources -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/artifika"
                        android:text="Support Resources\n"
                        android:textColor="@color/van_dyke"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/asul"
                        android:text="@string/support_resources"
                        android:id="@+id/support_resources_text"
                        android:textColor="@color/deep_red"
                        android:textSize="16sp"
                        android:autoLink="phone|web"
                        android:linksClickable="true"/>
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Section 5: About DrinkWise -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/artifika"
                        android:text="About DrinkWise\n"
                        android:textAlignment="center"
                        android:textColor="@color/van_dyke"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/asul"
                        android:text="DrinkWise is designed to help you make informed decisions about alcohol consumption. We're committed to promoting responsible drinking habits and providing tools that help you stay safe!"
                        android:textColor="@color/deep_red"
                        android:textSize="16sp" />
                </LinearLayout>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>






