<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:padding="12dp">

<TextView
    android:id="@+id/alertType"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Alert Type"
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<TextView
    android:id="@+id/alertMessage"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Message"
    app:layout_constraintTop_toBottomOf="@id/alertType"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp" />

<TextView
    android:id="@+id/alertTimestamp"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Timestamp"
    android:textSize="12sp"
    android:textColor="#666666"
    app:layout_constraintTop_toBottomOf="@id/alertMessage"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp" />

<TextView
    android:id="@+id/alertSafetyLevel"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Safety Level"
    app:layout_constraintTop_toBottomOf="@id/alertTimestamp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp" />

<TextView
    android:id="@+id/alertBacValue"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="BAC: 0.00"
    app:layout_constraintTop_toBottomOf="@id/alertSafetyLevel"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

