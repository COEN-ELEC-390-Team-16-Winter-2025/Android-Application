<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bone"
    tools:context=".ui.dashboard.DashboardFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/BAC_measurement_container"
        android:background="@drawable/dashboard_border"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="20dp"
            android:text="Last B.A.C. Measurement"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:id="@+id/latest_BAC_measurement"
            android:text="0.00"
            android:textColor="@color/black"
            android:fontFamily="@font/geostar_fill"
            android:textSize="100dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"

            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drinks"
                    android:textSize="13dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/number_of_drinks"
                    android:fontFamily="@font/montserrat"
                    android:text="--"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/calories"
                    android:text="--"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time Drinking"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="13dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="20dp">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_drinking"
                    android:text="--"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnSeeList"
        android:layout_width="131dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:backgroundTint="#AE1414"
        android:padding="16dp"
        android:text="See List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.653" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/dashboard_boarder_orange"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/dashboard_border_drawable"
                android:gravity="center">

                <ImageView
                    android:layout_width="69dp"
                    android:layout_height="66dp"
                    android:src="@drawable/baseline_monitor_heart_24"></ImageView>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Drinking Activity"
                android:textColor="@color/white"
                android:textSize="13dp"></TextView>

            <TextView
                android:id="@+id/drinking_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="19dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/dashboard_boarder_orange"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_bedtime_24"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Hours of sleep"
                android:textColor="@color/white"
                android:textSize="13dp"></TextView>

            <TextView
                android:id="@+id/hours_of_sleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="19dp"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/dashboard_boarder_orange"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/baseline_bloodtype_24"></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Blood oxygen SpO2"
                android:textColor="@color/white"
                android:textSize="13dp"></TextView>

            <TextView
                android:id="@+id/blood_oxygen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="--"
                android:textColor="@color/white"
                android:textSize="19dp"></TextView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnRefreshBAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#AE1414"
        android:padding="16dp"
        android:text="Refresh BAC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.652" />


</androidx.constraintlayout.widget.ConstraintLayout>