<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Header bar color (top area of the dialog, including title) -->
        <item name="colorPrimary">@color/button_orange</item>

        <!-- Background color of the whole dialog -->
        <item name="android:background">@color/bone</item>

        <!-- Color of the OK and CANCEL text buttons -->
        <item name="colorControlNormal">@color/button_orange</item> <!-- For unpressed state -->
        <item name="colorAccent">@color/button_orange</item> <!-- Fallback for older components -->

        <!-- Color of the date circle (selected date) -->
        <item name="colorOnPrimary">@color/dark_brown</item> <!-- Text color inside the selected circle -->

        <!-- Optional: text colors for the header title text and other stuff -->
        <item name="android:textColorPrimary">@color/dark_brown</item> <!-- Title text in the header -->
    </style>


    <style name="RedBorderAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Dark red border -->
        <item name="android:windowBackground">@drawable/alert_dialog_red_border</item>

        <!-- Text appearance for title and message -->
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialogMessageText</item>
    </style>

    <style name="AlertDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="AlertDialogMessageText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">18sp</item>
    </style>



    <style name="RecommendationDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/recommendation_dialog</item><!-- Text appearance for title and message -->

        <item name="materialAlertDialogTitleTextStyle">@style/RecommendationDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/RecommendationDialogMessageText</item>
    </style>

    <style name="RecommendationDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="RecommendationDialogMessageText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/bac_medical_emergency</item>
        <item name="android:textColor">#6A6666</item>
        <item name="android:textColorHighlight">#33000000</item>
    </style>

    <!-- styles.xml -->
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#6A4E3D</item>
        <item name="textAllCaps">false</item>
    </style>



    holo_green_dark

</resources>
