<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Border color and width -->
    <stroke
        android:width="2dp"
        android:color="@color/dark_brown" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
